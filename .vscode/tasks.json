  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "g++ build active file",
      "command": "/usr/local/bin/g++",
      "args": [
        "-g",
        // "-std=c++11",
        "-std=c++17",
        "${file}",
        "-o",
        "${fileDirname}/bin/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "/usr/local/bin"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build"
    },
