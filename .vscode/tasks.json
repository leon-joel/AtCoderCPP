    {
      "type": "shell",
      "label": "Boost Test",
      "command": "/usr/local/bin/g++",
      "args": [
        "-g",
        // "-std=c++11",
        "-std=c++17",
        "-D_GLIBCXX_USE_CXX11_ABI=0",
        "-I/usr/local/include",
        "-L/usr/local/lib",
        "-lboost_unit_test_framework",
        "${file}",
        "-o",
        "${fileDirname}/bin/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "/usr/local/bin"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build"
    }
